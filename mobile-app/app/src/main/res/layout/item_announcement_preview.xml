<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_background"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <TextView
            android:id="@+id/text_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Computer Science Group"
            android:textColor="#818CF8"
            android:textSize="12sp"
            android:textStyle="bold"/>
            
        <TextView
            android:id="@+id/text_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h ago"
            android:textColor="#9CA3AF"
            android:textSize="10sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dr. Lawrence"
        android:textColor="#D1D5DB"
        android:textSize="12sp"
        android:layout_marginTop="2dp"/>
        
    <TextView
        android:id="@+id/text_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remember to submit your assignment by Friday..."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:ellipsize="end"/>

</LinearLayout>