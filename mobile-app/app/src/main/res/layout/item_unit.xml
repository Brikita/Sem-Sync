<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1F2937"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/text_unit_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCS211"
                android:textColor="#818CF8"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/bg_badge_rep"
                android:backgroundTint="#312E81"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"/>
            
            <TextView
                android:id="@+id/text_unit_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Data Structures"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <ImageView
                android:id="@+id/btn_delete_unit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                app:tint="#EF4444"/>
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#374151"
            android:layout_marginVertical="12dp"/>
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_baseline_access_time_24"
                app:tint="#9CA3AF"/>
                
            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon â€¢ 09:00 - 11:00"
                android:textColor="#D1D5DB"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_baseline_location_on_24"
                app:tint="#9CA3AF"/>
                
            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room 303"
                android:textColor="#D1D5DB"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_lecturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dr. Smith"
            android:textColor="#9CA3AF"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>