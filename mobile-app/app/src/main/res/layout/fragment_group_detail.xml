<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111827">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#111827"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <LinearLayout
                android:id="@+id/btn_back_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                
                <TextView
                    android:id="@+id/text_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="← Back to Groups"
                    android:textColor="#9CA3AF"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_group_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Group Name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/badge_rep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_badge_rep"
                    android:text="You are Rep"
                    android:textColor="#4338CA"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:visibility="gone"
                    android:backgroundTint="#C7D2FE"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_group_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Info • N Students"
                android:textColor="#9CA3AF"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_join_code_dark"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JOIN CODE"
                        android:textSize="11sp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        android:textColor="#9CA3AF"/>
                    <TextView
                        android:id="@+id/text_join_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOADING"
                        android:fontFamily="monospace"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#818CF8"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="#374151"
                    android:layout_marginHorizontal="16dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minWidth="80dp">
                    <TextView
                        android:id="@+id/text_member_count_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MEMBERS"
                        android:textSize="11sp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        android:textColor="#9CA3AF"/>
                    <TextView
                        android:id="@+id/text_members_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#111827"
            app:tabTextColor="#9CA3AF"
            app:tabSelectedTextColor="#818CF8"
            app:tabIndicatorColor="#818CF8"
            app:tabIndicatorHeight="3dp"
            app:tabMode="fixed"
            app:tabGravity="fill"/>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Discussions Tab -->
        <LinearLayout
            android:id="@+id/layout_discussions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#111827"
            android:padding="16dp">

            <!-- Post Input Box -->
            <LinearLayout
                android:id="@+id/layout_post_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_dark"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                
                <EditText
                    android:id="@+id/et_post_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Post an announcement..."
                    android:background="@null"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#6B7280"
                    android:minLines="2"
                    android:gravity="top|start"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical|end">
                    
                    <Button
                        android:id="@+id/btn_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:text="Post"
                        android:textAllCaps="false"
                        android:backgroundTint="#6366F1"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_posts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <!-- Units Tab -->
        <FrameLayout
            android:id="@+id/layout_units"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#111827"
            android:padding="16dp"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_units"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab_add_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:backgroundTint="#6366F1"
                android:textColor="#FFFFFF"
                android:text="Add Class"
                app:icon="@android:drawable/ic_input_add"
                app:iconTint="#FFFFFF"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Resources Tab -->
        <LinearLayout
             android:id="@+id/layout_resources"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="#111827"
             android:padding="16dp"
             android:visibility="gone"
             android:gravity="center">
             
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Resources coming soon..."
                 android:textColor="#9CA3AF"
                 android:textSize="16sp"/>
        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
