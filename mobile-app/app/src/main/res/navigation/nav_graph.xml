<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.semsync.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_timetable"
        android:name="com.example.semsync.TimetableFragment"
        android:label="fragment_timetable"
        tools:layout="@layout/fragment_timetable" />
    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.semsync.TasksFragment"
        android:label="fragment_tasks"
        tools:layout="@layout/fragment_tasks" />
    <fragment
        android:id="@+id/navigation_ai_chat"
        android:name="com.example.semsync.AiChatFragment"
        android:label="fragment_ai_chat"
        tools:layout="@layout/fragment_ai_chat" />
    <fragment
        android:id="@+id/navigation_groups"
        android:name="com.example.semsync.GroupsFragment"
        android:label="GroupsFragment"
        tools:layout="@layout/fragment_groups" />
    <fragment
        android:id="@+id/navigation_group_detail"
        android:name="com.example.semsync.GroupDetailFragment"
        android:label="fragment_group_detail"
        tools:layout="@layout/fragment_group_detail" >
        <argument
            android:name="groupId"
            app:argType="string" />
        <argument
            android:name="groupName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/navigation_notebook"
        android:name="com.example.semsync.NotebookFragment"
        android:label="NotebookFragment"
        tools:layout="@layout/fragment_notebook" />
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.semsync.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>